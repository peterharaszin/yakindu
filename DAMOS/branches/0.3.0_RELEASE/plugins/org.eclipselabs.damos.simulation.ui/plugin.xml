<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipselabs.damos.ide.ui.damos"
            class="org.eclipselabs.damos.simulation.ui.internal.parts.SimulationView"
            icon="icons/Simulation.gif"
            id="org.eclipselabs.damos.simulation.ui.simulationView"
            name="Simulation"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipselabs.damos.ide.ui.damosCategory"
            class="org.eclipselabs.damos.simulation.ui.internal.wizards.NewSimulationConfigurationCreationWizard"
            icon="icons/NewSimulationConfiguration.png"
            id="org.eclipselabs.damos.simulation.ui.newSimulationConfigurationCreationWizard"
            name="Simulation Configuration">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="org.eclipselabs.damos.simulation.ui.internal.decorators.SimulationConfigurationDecorator"
            id="org.eclipselabs.damos.simulation.ui.simulationConfigurationDecorator"
            label="Simulation Configuration"
            lightweight="true"
            location="TOP_RIGHT"
            state="true">
         <enablement>
            <objectClass
                  name="org.eclipse.core.resources.IFile">
            </objectClass>
         </enablement>
      </decorator>
   </extension>
   <extension
         point="org.eclipselabs.damos.simulation.simulationListeners">
      <listener
            class="org.eclipselabs.damos.simulation.ui.internal.parts.SimulationListener">
      </listener>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipselabs.damos.ide.ui.damosPerspective">
         <view
               id="org.eclipselabs.damos.simulation.ui.simulationView"
               minimized="false"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.PropertySheet">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
