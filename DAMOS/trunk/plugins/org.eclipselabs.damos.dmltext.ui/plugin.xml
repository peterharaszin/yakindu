<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
              class="org.eclipselabs.damos.dmltext.ui.BlockTypeExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
              contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
              default="true"
              extensions="blocktype"
              icon="icons/BlockType.png"
              id="org.eclipselabs.damos.dmltext.blockType"
              name="Block Type Editor">
        </editor>
        <editor
              class="org.eclipselabs.damos.dmltext.ui.SystemInterfaceExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
              contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
              default="true"
              extensions="systeminterface"
              icon="icons/SystemInterface.png"
              id="org.eclipselabs.damos.dmltext.systemInterface"
              name="System Interface Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="org.eclipselabs.damos.dmltext.DMLText.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="org.eclipselabs.damos.dmltext.DMLText.validate">
         <activeWhen>
            <reference
                    definitionId="org.eclipselabs.damos.dmltext.DMLText.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="org.eclipselabs.damos.dmltext.DMLText.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="org.eclipselabs.damos.dmltext.DMLText" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.eclipselabs.damos.dmltext.DMLText"
            name="DMLText">
            <keywordReference id="org.eclipselabs.damos.dmltext.ui.keyword_DMLText"/>
        </page>
        <page
            category="org.eclipselabs.damos.dmltext.DMLText"
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="org.eclipselabs.damos.dmltext.DMLText.coloring"
            name="Syntax Coloring">
            <keywordReference id="org.eclipselabs.damos.dmltext.ui.keyword_DMLText"/>
        </page>
        <page
            category="org.eclipselabs.damos.dmltext.DMLText"
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="org.eclipselabs.damos.dmltext.DMLText.templates"
            name="Templates">
            <keywordReference id="org.eclipselabs.damos.dmltext.ui.keyword_DMLText"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.eclipselabs.damos.dmltext.DMLText"
            name="DMLText">
            <keywordReference id="org.eclipselabs.damos.dmltext.ui.keyword_DMLText"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="org.eclipselabs.damos.dmltext.ui.keyword_DMLText"
            label="DMLText"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="org.eclipselabs.damos.dmltext.DMLText.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="org.eclipselabs.damos.dmltext.DMLText.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="org.eclipselabs.damos.dmltext.DMLText.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="org.eclipselabs.damos.dmltext.DMLText.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="org.eclipselabs.damos.dmltext.DMLText.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="org.eclipselabs.damos.dmltext.ui.BlockTypeExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="blocktype">
		</parser>
  <parser
        class="org.eclipselabs.damos.dmltext.ui.SystemInterfaceExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
        type="systeminterface">
  </parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="org.eclipselabs.damos.dmltext.ui.BlockTypeExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="blocktype">
        </resourceServiceProvider>
        <resourceServiceProvider
              class="org.eclipselabs.damos.dmltext.ui.SystemInterfaceExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
              uriExtension="systeminterface">
        </resourceServiceProvider>
        <resourceServiceProvider
              class="org.eclipselabs.damos.dmltext.ui.BlockDiagramExecutableExtensionFactory:org.eclipselabs.damos.dmltext.resource.BlockDiagramResourceServiceProvider"
              uriExtension="blockdiagram">
        </resourceServiceProvider>
    </extension>


    <!-- marker definitions for org.eclipselabs.damos.dmltext.DMLText -->
    <extension
            id="dmltext.check.fast"
            name="DMLText Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="dmltext.check.normal"
            name="DMLText Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.normal"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="dmltext.check.expensive"
            name="DMLText Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.expensive"/>
        <persistent value="true"/>
    </extension>

	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="org.eclipselabs.damos.dmltext.DMLText.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.eclipselabs.damos.dmltext.DMLText.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
    <!-- quickfix marker resolution generator for org.eclipselabs.damos.dmltext.DMLText -->
    <extension
            point="org.eclipse.ui.ide.markerResolution">
        <markerResolutionGenerator
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="org.eclipselabs.damos.dmltext.ui.dmltext.check.fast">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="org.eclipselabs.damos.dmltext.ui.dmltext.check.normal">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="org.eclipselabs.damos.dmltext.ui.DMLTextExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="org.eclipselabs.damos.dmltext.ui.dmltext.check.expensive">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
    </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipselabs.damos.ide.ui.damosCategory"
            class="org.eclipselabs.damos.dmltext.ui.internal.wizards.NewBlockTypeCreationWizard"
            icon="icons/BlockType.png"
            id="org.eclipselabs.damos.dmltext.ui.newBlockTypeWizard"
            name="Block Type">
      </wizard>
      <wizard
            category="org.eclipselabs.damos.ide.ui.damosCategory"
            class="org.eclipselabs.damos.dmltext.ui.internal.wizards.NewSystemInterfaceCreationWizard"
            icon="icons/SystemInterface.png"
            id="org.eclipselabs.damos.dmltext.ui.newSystemInterfaceWizard"
            name="System Interface">
      </wizard>
   </extension>


</plugin>
