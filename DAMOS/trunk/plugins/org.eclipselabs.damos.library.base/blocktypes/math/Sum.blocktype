package damos.library.base.math

blockType Sum {

	input _input[2..*] {
		parameter sign = 1
	}
	output y

	function main(const sign, _input) -> y {
		check(real[2], <{ 1, -1 }>) -> real
		
		static assert _input is real(?)[] :
			error "Input values must be numeric"
	
		eq y = sign * _input
	}
	
}
