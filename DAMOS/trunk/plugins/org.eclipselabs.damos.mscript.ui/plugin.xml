<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="mscript"
            id="org.eclipselabs.damos.mscript.Mscript"
            name="Mscript Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="org.eclipselabs.damos.mscript.Mscript.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="org.eclipselabs.damos.mscript.Mscript.validate">
         <activeWhen>
            <reference
                    definitionId="org.eclipselabs.damos.mscript.Mscript.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="org.eclipselabs.damos.mscript.Mscript.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="org.eclipselabs.damos.mscript.Mscript" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.eclipselabs.damos.mscript.Mscript"
            name="Mscript">
            <keywordReference id="org.eclipselabs.damos.mscript.ui.keyword_Mscript"/>
        </page>
        <page
            category="org.eclipselabs.damos.mscript.Mscript"
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="org.eclipselabs.damos.mscript.Mscript.coloring"
            name="Syntax Coloring">
            <keywordReference id="org.eclipselabs.damos.mscript.ui.keyword_Mscript"/>
        </page>
        <page
            category="org.eclipselabs.damos.mscript.Mscript"
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="org.eclipselabs.damos.mscript.Mscript.templates"
            name="Templates">
            <keywordReference id="org.eclipselabs.damos.mscript.ui.keyword_Mscript"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.eclipselabs.damos.mscript.Mscript"
            name="Mscript">
            <keywordReference id="org.eclipselabs.damos.mscript.ui.keyword_Mscript"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="org.eclipselabs.damos.mscript.ui.keyword_Mscript"
            label="Mscript"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="org.eclipselabs.damos.mscript.Mscript.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="org.eclipselabs.damos.mscript.Mscript.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="org.eclipselabs.damos.mscript.Mscript.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="org.eclipselabs.damos.mscript.Mscript.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="org.eclipselabs.damos.mscript.Mscript.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="mscript">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="mscript">
        </resourceServiceProvider>
    </extension>


    <!-- marker definitions for org.eclipselabs.damos.mscript.Mscript -->
    <extension
            id="mscript.check.fast"
            name="Mscript Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="mscript.check.normal"
            name="Mscript Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.normal"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="mscript.check.expensive"
            name="Mscript Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.expensive"/>
        <persistent value="true"/>
    </extension>

	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="org.eclipselabs.damos.mscript.Mscript.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.eclipselabs.damos.mscript.Mscript.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
    <!-- quickfix marker resolution generator for org.eclipselabs.damos.mscript.Mscript -->
    <extension
            point="org.eclipse.ui.ide.markerResolution">
        <markerResolutionGenerator
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="org.eclipselabs.damos.mscript.ui.mscript.check.fast">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="org.eclipselabs.damos.mscript.ui.mscript.check.normal">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="org.eclipselabs.damos.mscript.ui.MscriptExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="org.eclipselabs.damos.mscript.ui.mscript.check.expensive">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
    </extension>
    
    <extension
          point="org.eclipse.ui.contexts">
       <context
             id="org.eclipselabs.damos.mscript.ui.mscriptEditorScope"
             name="Editing Mscript Source"
             parentId="org.eclipse.xtext.ui.XtextEditorScope">
       </context>
    </extension>

   <extension point="org.eclipse.ui.commands">
   	  <command
            description="Inserts an opening french quote"
            id="org.eclipselabs.damos.mscript.ui.insertLeftGuillemet"
            name="Insert left guillemet"/>
   	  <command
            description="Inserts an closing french quote"
            id="org.eclipselabs.damos.mscript.ui.insertRightGuillemet"
            name="Insert right guillemet"/>
   </extension>

   <extension
         point="org.eclipse.ui.bindings">
      <key
            contextId="org.eclipselabs.damos.mscript.ui.mscriptEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+&lt;"
            commandId="org.eclipselabs.damos.mscript.ui.insertLeftGuillemet">
      </key>
      <key
            contextId="org.eclipselabs.damos.mscript.ui.mscriptEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+&gt;"
            commandId="org.eclipselabs.damos.mscript.ui.insertRightGuillemet">
      </key>
      <key
            contextId="org.eclipselabs.damos.mscript.ui.mscriptEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M4+&lt;"
            commandId="org.eclipselabs.damos.mscript.ui.insertLeftGuillemet">
      </key>
      <key
            contextId="org.eclipselabs.damos.mscript.ui.mscriptEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M4+&gt;"
            commandId="org.eclipselabs.damos.mscript.ui.insertRightGuillemet">
      </key>
   </extension>

   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipselabs.damos.mscript.ui.handlers.InsertStringHandler$LeftGuillemet"
            commandId="org.eclipselabs.damos.mscript.ui.insertLeftGuillemet">
      </handler>
      <handler
            class="org.eclipselabs.damos.mscript.ui.handlers.InsertStringHandler$RightGuillemet"
            commandId="org.eclipselabs.damos.mscript.ui.insertRightGuillemet">
      </handler>
   </extension>

</plugin>
