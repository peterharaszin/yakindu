		<module>../org.eclipse.damos.diagram.dmlnotation</module>
		<module>../org.eclipse.damos.diagram.ui</module>
		<module>../org.eclipse.damos.dml</module>
		<module>../org.eclipse.damos.dml.edit</module>
		<module>../org.eclipse.damos.dml.ui</module>
		<module>../org.eclipse.damos.dscript</module>
		<module>../org.eclipse.damos.dscript.tests</module>
		<module>../org.eclipse.damos.dscript.ui</module>
		<module>../org.eclipse.damos.doc</module>
