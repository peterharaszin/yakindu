		<module>../org.eclipse.damos.ide.core</module>
		<module>../org.eclipse.damos.ide.ui</module>
		<module>../org.eclipse.damos.library.base</module>
		<module>../org.eclipse.damos.library.base.simulation</module>
		<module>../org.eclipse.damos.library.base.simulation.ui</module>
		<module>../org.eclipse.damos.library.base.ui</module>
		<module>../org.eclipse.damos.library.common</module>
		<module>../org.eclipse.damos.library.common.ui</module>
		<module>../org.eclipse.damos.mscript</module>
		<module>../org.eclipse.damos.mscript.codegen.c</module>
		<module>../org.eclipse.damos.mscript.codegen.c.ide.core</module>
		<module>../org.eclipse.damos.mscript.codegen.c.ide.ui</module>
