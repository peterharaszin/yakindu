		<module>../org.eclipse.damos.tests</module>
		
		<module>../org.eclipse.damos-feature</module>
		<module>../org.eclipse.damos.codegen.c-feature</module>
		<module>../org.eclipse.damos.diagram-feature</module>
		<module>../org.eclipse.damos.execution-feature</module>
		<module>../org.eclipse.damos.library-feature</module>
		<module>../org.eclipse.damos.library.simulation-feature</module>
		<module>../org.eclipse.damos.mscript-feature</module>
		<module>../org.eclipse.damos.simulation-feature</module>
	</modules>

</project>
