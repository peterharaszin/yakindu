<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<!-- Extension Points -->
	
   <extension-point id="expressions" name="org.yakindu.sct.ui.editor.expressions" schema="schema/expressions.exsd"/>
  
    <!-- Editor -->
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.yakindu.sct.ui.editor.factories.SCTExecutableExtensionFactory:org.yakindu.sct.ui.editor.editor.StatechartDiagramEditor"
            contributorClass="org.yakindu.sct.ui.editor.editor.StatechartDiagramActionbarContributor"
            default="true"
            extensions="sct"
            icon="icons/obj16/logo-16.png"
            id="org.yakindu.sct.ui.editor.editor.StatechartDiagramEditor"
            matchingStrategy="org.eclipse.gmf.runtime.diagram.ui.resources.editor.parts.DiagramDocumentEditorMatchingStrategy"
            name="YAKINDU Statechart Editor">
      </editor>
   </extension>
   <!-- Contribution Item Provider -->
   <extension point="org.eclipse.gmf.runtime.common.ui.services.action.contributionItemProviders">
      <contributionItemProvider
            class="org.eclipse.gmf.runtime.diagram.ui.providers.DiagramContributionItemProvider"
            checkPluginLoaded="false">
         <Priority name="Low"/>
         <popupContribution class="org.eclipse.gmf.runtime.diagram.ui.providers.DiagramContextMenuProvider">
            <popupStructuredContributionCriteria objectClass="org.yakindu.sct.ui.editor.editparts.StatechartTextEditPart"/>
            <popupStructuredContributionCriteria objectClass="org.yakindu.sct.ui.editor.editparts.StatechartTextExpressionEditPart"/>
            <popupPredefinedItem id="editGroup" remove="true"/>
         </popupContribution>
      </contributionItemProvider>
   </extension>
   
  <!-- View Provider -->
   
   <extension
         point="org.eclipse.gmf.runtime.diagram.core.viewProviders">
      <viewProvider
            class="org.yakindu.sct.ui.editor.providers.StatechartDiagramViewProvider">
         <Priority
               name="Highest">
         </Priority>
      </viewProvider>
   </extension>
    <!-- EditPart Provider -->
   <extension
         point="org.eclipse.gmf.runtime.diagram.ui.editpartProviders">
      <editpartProvider
            class="org.yakindu.sct.ui.editor.factories.SCTExecutableExtensionFactory:org.yakindu.sct.ui.editor.editor.guice.InjectableEditPartFactory">
         <Priority
               name="Medium">
         </Priority>
      </editpartProvider>
   </extension>
   <!--New File Wizard -->
   <extension
         point="org.eclipse.ui.newWizards">
     <category id="YAKINDU" name="Yakindu"/>
      <wizard
            category="YAKINDU"
            class="org.yakindu.sct.ui.editor.factories.SCTExecutableExtensionFactory:org.yakindu.sct.ui.editor.wizards.CreationWizard"
            icon="icons/obj16/logo-16.png"
            id="org.yakindu.sct.ui.editor.StatechartDiagramWizard"
            name="YAKINDU Statechart Model"
            project="false">
      </wizard>
   </extension>
   <!-- Palette Provider -->
   <extension
         point="org.eclipse.gmf.runtime.diagram.ui.paletteProviders">
      <paletteProvider
            class="org.yakindu.sct.ui.editor.factories.SCTExecutableExtensionFactory:org.yakindu.sct.ui.editor.providers.SCTPaletteProvider">
             <Priority
               name="Medium">
         </Priority>
         <editor
               class="org.yakindu.sct.ui.editor.editor.StatechartDiagramEditor">
         </editor>
      </paletteProvider>
   </extension>
